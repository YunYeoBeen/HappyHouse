<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 


 <mapper namespace="com.example.model.dao.HouseDealDAO">
 	<select id="selectHouseDealList" parameterType="int" resultType="HouseDeal">
 		select * from housedeal where aptCode = #{aptcode}
 	</select>
 	<select id="selectDealAmountAvg" parameterType="int" resultType="int">
 		select avg(replace(dealAmount,',','')) as dealAmountAvg from housedeal where aptCode = #{aptCode};
 	</select>
 </mapper>